<h4>Comments</h4>
<% @blog.comments.each do |c| %>
<% if c.id == nil %>
<% c.user_id = 0 %>
<% else %>
<u>Comment:</u> <%= c.content %><br>
<u>By:</u> <%= c.user.username %>
<% end %>


<br>
    <% if logged_in? && current_user.id == c.user_id %>
    <div id="link"><a href="/blogs/<%=@blog.id%>/comments/<%=c.id%>/edit">edit comment</a>
    </div>

    <hr>
    <% end %>
<% end %>
